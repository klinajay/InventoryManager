@inherits LayoutComponentBase

<div class="page" style="background-color: forestgreen">
    <div class="sidebar" >
        <NavMenu />
    </div>

    <main>
        

        <article class="content px-4">
            <ErrorBoundary>
                <ChildContent>
                    @Body
                </ChildContent>
                <ErrorContent>
					<h1>Oops!</h1>
					<h2>Something went wrong.</h2>
					<p>Try refreshing the page or navigating back to the previous page.</p>
                </ErrorContent>
            </ErrorBoundary>
            
        </article>
    </main>
</div>
