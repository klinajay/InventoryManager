@page "/addproduct"

@inject NavigationManager NavigationManager
@rendermode InteractiveServer
<h1 style="color: purple">Add product here...</h1>


@if (isLoading)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="@ProductSelected" class="mb-5" FormName="addproduct" OnValidSubmit="HandleValidSubmit">
        <ValidationSummary></ValidationSummary>

        <div class="form-group">
            <label for="productName">Product Name</label>
            <InputText id="productName" required  class="form-control" @bind-Value="ProductSelected.ProductName" />
            <ValidationMessage For=@(() => ProductSelected.ProductName)/>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <InputTextArea id="description" class="form-control" @bind-Value="ProductSelected.Description" />
            <ValidationMessage For=@(() => ProductSelected.Description) />
        </div>

        <div class="form-group">
            <label for="productPrice">Price</label>
            <InputNumber id="productPrice" required class="form-control" @bind-Value="ProductSelected.ProductPrice" />
            <ValidationMessage For=@(() => ProductSelected.ProductPrice)/>
        </div>

        <div class="form-group">
            <label for="productQuantity">Quantity</label>
            <InputNumber id="productQuantity" required class="form-control" @bind-Value="ProductSelected.ProductQuantity" />
            <ValidationMessage For=@(() => ProductSelected.ProductQuantity) />
        </div>

        <div class="form-group">
            <label for="imageUrl">Image URL</label>
            <InputText id="imageUrl" class="form-control" @bind-Value="ProductSelected.ImageUrl" />
        </div>

        <h4>Supplier Information</h4>

        <div class="form-group">
            <label for="supplierId">Supplier Id</label>
            <InputText id="supplierId" required  class="form-control" @bind-Value="ProductSelected.SupplierId" />
            <ValidationMessage For=@(() => ProductSelected.SupplierId)/>
        </div>

      
        <h4>Category Information</h4>
        <div class="form-group">
            <label for="categoryId">Category Id</label>
            <InputText id="categoryId" required class="form-control" @bind-Value="ProductSelected.ProductCategoryId" />
            <ValidationMessage For=@(() => ProductSelected.ProductCategoryId) />
        </div>

       
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
    </EditForm>

}
@if (!isSucess)
{
    <h1 style="color: red">@errorMessage</h1>
}
