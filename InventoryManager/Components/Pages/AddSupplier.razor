@page "/addsupplier"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
<h1 style="color:purple">Add Supplier here...</h1>
@if (isLoading)
{
    <p>Loading...</p>
}
else
{
    <EditForm Model="@SupplierSelected" class="mb-5" FormName="addsupplier" OnValidSubmit="HandleValidSubmit">
        <ValidationSummary></ValidationSummary>

        <div class="form-group">
            <label for="supplierName">Supplier Name</label>
            <InputText id="supplierName" required class="form-control" @bind-Value="SupplierSelected.SupplierName" />
        </div>

        <div class="form-group">
            <label for="productPrice">Address</label>
            <InputTextArea id="productPrice" required class="form-control" @bind-Value="SupplierSelected.SupplierAddress" />
            
        </div>

        <div class="form-group">
            <label for="productQuantity">Mobile Number</label>
            <InputText id="productQuantity" required class="form-control" @bind-Value="SupplierSelected.SupplierContact" />
            <ValidationMessage For=@(() => SupplierSelected.SupplierContact) />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
    </EditForm>

}
@if (!isSucess)
{
    <h1 style="color: red">@errorMessage</h1>
}
