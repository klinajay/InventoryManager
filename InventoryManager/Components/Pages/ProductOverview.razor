@page "/productoverview"
@attribute [StreamRendering(true)]

<div class="top-row px-20 mb-5" style="background-color: #D8BFD8">
	<h3 style="color: mediumpurple">Product Overview</h3>
	<div>
		<NumberOfProducts></NumberOfProducts>
	</div>
	<div>
	<label for="category">Select Category:</label>
	<select onselect="RenderProductByCategories"  id="category" @bind="SelectedCategory" class="form-control">
		<option value="">-- All Categories --</option>
		@foreach (var category in Categories)
		{
			<option value="@category.CategoryName">@category.CategoryName</option>
		}
	</select>
</div>

</div>

@if(Products == null) {
	
	<p class="text-black"><em>Loading...</em></p>
}
else {
	<div class="row g-3">
		@foreach (var product in Products)
		{
			<div class="col-12 col-md-4 col-lg-3">
			
				<ProductCard product="product"></ProductCard>
			</div>
		}
	</div>
	
				

}



