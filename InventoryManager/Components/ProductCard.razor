
@rendermode InteractiveServer
@using InventoryManager.Components; 
@inject NavigationManager NavigationManager
@if(isLoading) {
    <p>Loading...</p>
}
else {
    <div class="card" style="width: 18rem;">
        <div style="width: 100%; height: 200px; overflow: hidden; position: relative;">
            <img src="@product.ImageUrl" class="card-img-top" alt="Product Image"
                 style="width: 100%; height: 100%; object-fit: cover; position: absolute; top: 0; left: 0;">
        </div>
        <div class="card-body">
            <h5 class="card-title">@product.ProductName</h5>
            <p class="card-text">@product.Description</p>
            <a id="directionLink" href="/productoverview/@product.ProductId" class="btn btn-primary" style="background-color: purple;">Details</a>
            <a id="deleteButton" class="btn btn-danger" @onclick="DeleteProduct">Delete</a>
        </div>
    </div>


}

@if(!isSuccess) {
    <h1>@errorMessage</h1>
}

